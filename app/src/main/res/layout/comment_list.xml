<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/commenttab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/tab_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/default_user"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/comment_item_img"
                />
            <TextView
                android:textColor="#c2bebe"
                android:id="@+id/comment_name"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201402王志发"

                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/tab_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_content"
                android:text="非常不错的项目，希望同学们能够好好学习。从而学习打更多的项目经验。"
                android:textColor="#2e2929"
                android:maxLines="2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/comment_date"
                        android:textColor="#c2bebe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2018-09-02 09:20"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_below="@+id/ctab"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f0f0f0"
        />

</RelativeLayout>