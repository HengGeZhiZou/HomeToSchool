<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:id="@+id/updateInfo"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/stu_pic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/defalut_user_max"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/stu_name"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/stu_pic"
            android:layout_alignTop="@+id/stu_pic"
            android:text="罗友恒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/stu_pic"
            android:text="计算机科学与技术1402"
            android:layout_below="@+id/stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="10sp"
            android:layout_marginRight="20dp"
            android:id="@+id/fixInfo"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="修改资料"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img1"
            android:src="@mipmap/playing"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_toRightOf="@+id/img1"
            android:textColor="#000000"
            android:gravity="center"
            android:text="正在审核中的项目"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_left"
            android:layout_width="12dp"
            android:layout_height="12dp" />
    </RelativeLayout>
    <View
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/img2"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/error" />

        </LinearLayout>
        <TextView
            android:layout_toRightOf="@+id/img2"
            android:textColor="#000000"
            android:gravity="center"
            android:text="未通过的项目"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_left"
            android:layout_width="12dp"
            android:layout_height="12dp" />
    </RelativeLayout>
    <View
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img3"
            android:src="@mipmap/pass"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_toRightOf="@+id/img3"
            android:textColor="#000000"
            android:gravity="center"
            android:text="已发表的项目"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_left"
            android:layout_width="12dp"
            android:layout_height="12dp" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img6"
            android:src="@mipmap/collect_on"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_toRightOf="@+id/img6"
            android:textColor="#000000"
            android:gravity="center"
            android:text="收藏的项目"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_left"
            android:layout_width="12dp"
            android:layout_height="12dp" />
    </RelativeLayout>
    <View
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/img4"
            android:src="@mipmap/certificate"
            android:layout_width="40dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_toRightOf="@+id/img4"
            android:textColor="#000000"
            android:gravity="center"
            android:text="证书"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_left"
            android:layout_width="12dp"
            android:layout_height="12dp" />
    </RelativeLayout>
    <View
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/img5"
            android:src="@mipmap/diploma"
            android:layout_width="40dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_toRightOf="@+id/img5"
            android:textColor="#000000"
            android:gravity="center"
            android:text="奖章"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_left"
            android:layout_width="12dp"
            android:layout_height="12dp" />
    </RelativeLayout>
    <View
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
