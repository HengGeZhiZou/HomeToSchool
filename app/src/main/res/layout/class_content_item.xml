<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <RelativeLayout
        android:id="@+id/ctab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/tab_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/other"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/class_item_img"
                />
            <TextView
                android:textColor="#c2bebe"
                android:id="@+id/class_type"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="互联网+"

                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/tab_name"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/class_title"
                android:text="基于google的人人脸识识google的人脸脸识别系识别系统"
                android:textColor="#2e2929"
                android:maxLines="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/noPassReason"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >

                    <TextView
                        android:id="@+id/student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="12"
                        android:textColor="#c2bebe"
                        android:singleLine="true"
                        android:text="成员:罗友恒 张丽 马云"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/hotImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_toLeftOf="@+id/comment_num"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/calender"
                        android:layout_alignBottom="@+id/comment_num"
                        />

                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/comment_num"
                        android:textColor="#c2bebe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2018-09-02"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_below="@+id/ctab"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        />

</RelativeLayout>